<% include ../partials/header %>

    <h2>DevJobs Dashboard for <%=user.local.email%></h2>
    <p>Number of jobs <%= jobs.length %></p>
    <% jobs.forEach(function(job){ %>
      <div class="row">
        <div class="col s12 m6">
          <div class="card blue-grey darken-1">
            <div class="card-content white-text">
              <span class="card-title"><%=job.jobTitle%></span>
              <p><%=job.location%></p>
              <ul class="job-categories">
                <% job.categories.forEach(function(skill){ %>
                  <% if(user.skills.indexOf(skill._id)>=0) { %>
                    <li class="hasSkill"><%=skill%></li>
                  <% } else { %>
                    <li><%=skill%></li>
                  <% } %> 
                <% }) %>
              </ul>
            </div>
            <div class="card-action">
              <a href="/job/<%=job._id%>">More Details</a>
              <span class="right">80% match</span>
            </div>
          </div>
        </div>
      </div>
    <% }) %>

<% include ../partials/footer %>